<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.jph.dt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handler+Runnable:"/>
	<com.jph.dt.DigitalTimer android:id="@+id/dt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        app:textColor="#7d3fe4"
	    app:textSize="7sp"
	    app:textBgRes="@drawable/digitalclock_selector"></com.jph.dt.DigitalTimer>
	<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CountDownTimer:"/>
	<com.jph.dt.DigitalTimer2 android:id="@+id/dt2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    app:textColor="#7d3fe4"
	    app:textSize="7sp"
	    app:textBgRes="@drawable/digitalclock_selector"></com.jph.dt.DigitalTimer2>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="62dp"
        android:text="开始计时" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="62dp"
        android:text="停止计时" />
</LinearLayout>
